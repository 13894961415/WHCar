<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <View
            android:layout_width="40dp"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textColor="@color/gary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp" />

        <View
            android:layout_width="40dp"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表显里程"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/biaoxianlicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.20万公里"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上牌时间"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/shangpaitime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018年03月"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆归属地"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/carisarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆所在地"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/carzaiarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="武汉"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车身颜色"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/carcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白色"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排放标准"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/carpaifang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国VI"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="变速箱"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/carbiansu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双离合变速箱(DCT)"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排量"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/carpailiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.0T"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginLeft="100dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <View
            android:layout_width="40dp"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置亮点"
            android:textColor="@color/gary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp" />

        <View
            android:layout_width="40dp"
            android:layout_height="0.5dp"
            android:background="@color/gary"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="仅供参考，购买前请与销售确认"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"/>

    <com.example.whcar.Home.utils.MyGridView
        android:id="@+id/carnews_gv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:numColumns="3"
        android:padding="10dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp">
    </com.example.whcar.Home.utils.MyGridView>

</LinearLayout>