<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="#da1609"
    app:subtitleTextColor="@color/white"
    app:titleTextColor="@color/white">


    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/sao"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/saoo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"
            android:textSize="12sp"
            android:layout_below="@+id/sao"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scratch_bcakground"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/line"
        android:background="@drawable/title_search_back"
        android:layout_marginRight="50dp"
        >
        <ImageView
            android:id="@+id/sou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/sousuo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/sousou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="#9d9d9d"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/sou"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
     android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"

        >

        <ImageView
            android:id="@+id/xiao"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/xiao"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:textSize="12sp"
            android:layout_below="@+id/xiao"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"

            />
    </RelativeLayout>

</RelativeLayout>