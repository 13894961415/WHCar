<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >






    <com.example.whcar.refresh_load.PullToRefreshLayout
        android:id="@+id/home_pull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/toolbar_dark"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">


                    <com.youth.banner.Banner
                        android:id="@+id/home_banner"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">
                    </com.youth.banner.Banner>

                </RelativeLayout>


                <com.example.whcar.Home.utils.MyGridView
                    android:id="@+id/home_hor_grid"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:numColumns="4"
                    android:horizontalSpacing="5dp"
                    android:verticalSpacing="5dp"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#fff"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                   >

                <TextView
                    android:id="@+id/ershou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="热门二手车"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5sp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多 >"
                    android:textColor="#898989"
                    android:textSize="13sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#000000"
                    />

                    <com.example.whcar.Home.utils.MyGridView

                        android:id="@+id/home_one_grid"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:numColumns="4"
                        android:layout_marginTop="5dp"
                        />

                    <com.example.whcar.Home.utils.MyGridView
                        android:id="@+id/home_two_grid"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:numColumns="4"

                        />

                    <com.example.whcar.Home.utils.MyGridView
                        android:id="@+id/home_three_grid"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:numColumns="4"

                        />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="85dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bantouming"/>

                    <ImageView
                        android:id="@+id/home_img_back"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/aq"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网红二手车"
                        android:textColor="#fff"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/home_img_back"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"

                     />

                    <TextView
                        android:id="@+id/zaishou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在售车:"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        android:layout_toRightOf="@+id/home_img_back"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/home_selling_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="264"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        android:layout_toRightOf="@+id/zaishou"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="|"
                        android:textColor="#fff"
                        android:layout_toRightOf="@+id/home_selling_num"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/yishou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已售车:"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        android:layout_toRightOf="@+id/home_selling_num"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/home_selled_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1974"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        android:layout_toRightOf="@+id/yishou"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/home_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:maxEms="11"
                        android:text="吉林省长春市宽城区北凯旋路3999-19号"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="7dp"
                        android:layout_toRightOf="@+id/home_img_back"
                        android:layout_marginLeft="10dp"/>


                    <ImageView
                        android:id="@+id/home_phone_img"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@mipmap/weibiaoti"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="7dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#000000"

                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="最新上架"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#000000"
                    />

                <com.example.whcar.Home.utils.MyGridView
                    android:id="@+id/home_ver_grid"
                    android:layout_width="match_parent"
                    android:layout_height="10000dp"
                    android:numColumns="2">
                </com.example.whcar.Home.utils.MyGridView>

            </LinearLayout>


        </LinearLayout>


        </ScrollView>

    </com.example.whcar.refresh_load.PullToRefreshLayout>



</LinearLayout>