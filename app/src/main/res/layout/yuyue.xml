<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/zhubo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="预约卖车信息"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="20sp"/>
            />
        </RelativeLayout>
        <ImageView
            android:id="@+id/tu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/aw"/>


        <RelativeLayout
            android:id="@+id/maiche"
            android:layout_below="@+id/tu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="拍照所在地"
                android:textSize="18sp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/mTvadress"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="请选择拍照所在地 >"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/chexing"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="品牌车系"
                android:textSize="18sp"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="请选择品牌车系 >"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="上盘时间"
                android:textSize="18sp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/shangpanshijian"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="请选择上盘时间 >"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shangshi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="验车时间"
                android:textSize="18sp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/yancheshijian"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="请选择验车时间 >"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/licheng"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="行驶里程"
                android:textSize="18sp"
                android:textColor="#000"
                />
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/wan"
                >
                <EditText
                    android:id="@+id/gongli"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:hint="请填写公里数"
                    android:textSize="13sp"
                    android:gravity="right"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/wan"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="万公里"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shouji"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="接受手机"
                android:textColor="#000"
                android:textSize="18sp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:hint="请填写接收手机号"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tuu"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/tuu"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/jiantou"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>




        <TextView
            android:id="@+id/wenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_below="@+id/app"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:id="@+id/shu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/wenti"
            android:background="#fff"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:hint="  请输入详细地址。"
                android:textSize="14sp"
                android:background="@null"
                android:textColor="#000"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#da1609"
        android:text="提 交"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>