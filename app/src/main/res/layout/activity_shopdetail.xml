<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.whcar.Home.utils.PullUpToLoadMore
        android:id="@+id/ptlm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.whcar.Home.utils.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/contacts_pinner_bg"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/detail_banner"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                </com.youth.banner.Banner>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/detail_car_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="奔驰GLE级 2016款 奔驰GLE GLE 320 4MATIC 轿跑SUV"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_marginRight="20dp"/>

                    <RelativeLayout
                        android:id="@+id/detail_xinxi"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/detail_car_name"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/detail_car_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017年01月"
                            android:textSize="13sp"
                            android:textColor="@color/gary"
                            android:layout_centerVertical="true"/>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="15dp"
                            android:background="@color/gary"
                            android:layout_toRightOf="@+id/detail_car_time"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/detail_car_km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.50万公里"
                            android:textSize="13sp"
                            android:textColor="@color/gary"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/detail_car_time"
                            android:layout_marginLeft="10.5dp"/>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="15dp"
                            android:background="@color/gary"
                            android:layout_toRightOf="@+id/detail_car_km"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/detail_car_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="武汉"
                            android:textSize="13sp"
                            android:textColor="@color/gary"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/detail_car_km"
                            android:layout_marginLeft="10.5dp"/>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="15dp"
                            android:background="@color/gary"
                            android:layout_toRightOf="@+id/detail_car_area"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/detail_car_specs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="武汉"
                            android:textSize="13sp"
                            android:textColor="@color/gary"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/detail_car_area"
                            android:layout_marginLeft="10.5dp"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/detail_car_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="53.80万"
                        android:textColor="@color/orange"
                        android:layout_below="@id/detail_xinxi"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/detail_car_price"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/detail_newcar_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新车含税价：94.22万"
                            android:textSize="13sp"
                            android:textColor="@color/gary"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/detail_car_chaprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="省40.42万"
                            android:textSize="13sp"
                            android:textColor="@color/gary"
                            android:layout_toRightOf="@+id/detail_newcar_price"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="45dp"
                            android:background="@color/orange"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="我要砍价"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="16sp"
                           />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/l1"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/detail_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网红二手车"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="进店逛逛"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="5dp"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/toright"
                            android:layout_alignParentRight="true"/>

                        <RelativeLayout
                            android:id="@+id/detail_num"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/detail_shop_name"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/detail_car_nownum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="在售车 61"
                                android:textSize="13sp"
                                android:textColor="@color/gary"
                                android:layout_centerVertical="true"/>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="15dp"
                                android:background="@color/gary"
                                android:layout_toRightOf="@+id/detail_car_nownum"
                                android:layout_marginLeft="5dp"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/detail_car_overnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6.50万公里"
                                android:textSize="13sp"
                                android:textColor="@color/gary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/detail_car_nownum"
                                android:layout_marginLeft="10.5dp"/>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="15dp"
                                android:background="@color/gary"
                                android:layout_toRightOf="@+id/detail_car_overnum"
                                android:layout_marginLeft="5dp"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/detail_car_personnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="浏览人数 23609"
                                android:textSize="13sp"
                                android:textColor="@color/gary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/detail_car_overnum"
                                android:layout_marginLeft="10.5dp"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/l2"/>

                    <RelativeLayout
                        android:id="@+id/l3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l2"
                        android:layout_marginTop="0.5dp">

                        <TextView
                            android:id="@+id/detail_car_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="吉林省长春市宽城区北凯旋路3999-19号"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/weizhi"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/l3"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l3"
                        android:layout_marginTop="0.5dp">

                        <TextView
                            android:id="@+id/detail_car_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12345678910"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/tel"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"/>

                    </RelativeLayout>



                </RelativeLayout>

            </LinearLayout>


        </com.example.whcar.Home.utils.MyScrollView>

        <com.example.whcar.Home.utils.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <include layout="@layout/include_bottom"/>

            </LinearLayout>

        </com.example.whcar.Home.utils.MyScrollView>
    </com.example.whcar.Home.utils.PullUpToLoadMore>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/detail_goshop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/fen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_shoucang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shoucang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_gotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ke"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/detail_goprice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@color/orange"
            android:text="询最低价"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/huiding"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/xiangshang"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"/>

</RelativeLayout>
