<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/zhuboimageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="爱车估价"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20sp"/>
    />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/maiche"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="卖车地点"
            android:textSize="18sp"
            android:textColor="#000"
           />

        <TextView
            android:id="@+id/mTvadress1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="请选择城市 >"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chexing"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="车型"
            android:textSize="18sp"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="请选择车型 >"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pan1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="上盘时间"
            android:textSize="18sp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/asdfasdfas"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="请选择上盘时间 >"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/licheng"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="行驶里程"
            android:textSize="18sp"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/gongli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写公里数"
            android:textCursorDrawable="@null"
            android:gravity="right"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/wan"
            />



        <TextView
            android:id="@+id/wan"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="万公里"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shouji"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="接受手机"
            android:textSize="18sp"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_marginRight="5dp"
                android:textCursorDrawable="@null"
                android:hint="请填写接收手机号>"
                android:textSize="14sp"
                android:gravity="right"
                />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该估值价格及供参考，最终成交价受车辆实际情况，买卖家心理等因素影响。车300，公平价提供技术支持。"
            />

    </LinearLayout>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0074E1"
        android:text="马上估价"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>